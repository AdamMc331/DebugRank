<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbarBugPointsTimer">

    <com.grapecity.debugrank.ui.misc.TextViewDrawableSize
        android:id="@+id/bugs"
        style="@style/Solve.Toolbar.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_bug_report_green_toolbar_wrapper"
        android:text="2"
        android:layout_alignParentLeft="true"/>

    <com.grapecity.debugrank.ui.misc.TextViewDrawableSize
        android:id="@+id/points"
        style="@style/Solve.Toolbar.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_grade_gold_toolbar_wrapper"
        android:text="5"
        android:layout_toRightOf="@+id/bugs"/>

    <com.grapecity.debugrank.ui.misc.timer.TimerTextView
        android:id="@+id/minutes"
        style="@style/Solve.Toolbar.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_timer_white_toolbar_wrapper"
        android:text="3:00"
        android:layout_alignParentRight="true"/>

</RelativeLayout>